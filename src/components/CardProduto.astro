---
const { product } = Astro.props;
---

<article class="group relative overflow-hidden rounded-2xl bg-white shadow-xl transition-all duration-500 hover:shadow-2xl h-full flex flex-col border border-gray-100">
  <!-- Imagem do produto com overlay gradiente -->
  <div class="relative h-72 overflow-hidden">
    <img
      src={product.image}
      alt={product.title}
      class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
      loading="lazy"
      width="400"
      height="300"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-[#7e172a]/90 via-[#7e172a]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  </div>

  <!-- Conteúdo -->
  <div class="p-6 flex-grow flex flex-col relative z-10">
    <!-- Título do produto -->
    <h3
      class="text-2xl font-bold text-[#7e172a] mb-3 transition-colors duration-300 group-hover:text-[#5a1020]"
      set:html={product.title}
    />

    <!-- Descrição -->
    <div
      class="text-gray-600 flex-grow transition-colors duration-300 group-hover:text-gray-800"
      set:html={product.content}
    />

    <!-- Linha decorativa -->
    <div class="mt-4 w-16 h-1 bg-[#7e172a] rounded-full transition-all duration-500 group-hover:w-24"></div>
  </div>
</article>

<style>
  /* Efeito sutil de elevação ao passar o mouse */
  article {
    transform: translateY(0);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  article:hover {
    transform: translateY(-5px);
  }

  /* Melhorias na tipografia */
  h3 {
    line-height: 1.3;
    letter-spacing: -0.5px;
  }
</style>