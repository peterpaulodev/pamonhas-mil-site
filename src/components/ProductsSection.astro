---
import CardProduto from './CardProduto.astro';

// Dados dos produtos da pamonharia
const { products } = Astro.props;

const { title = 'Nossos produtos' } = Astro.props;
---

<section class="bs-container py-12 md:py-16 lg:py-20" id="produtos">
  <!-- Cabeçalho -->
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-bs-text mb-4">{title}</h2>
    <div class="w-20 h-1 bg-bs-primary-600 mx-auto mb-4"></div>
    <p class="text-lg text-bs-text-muted max-w-3xl mx-auto">
      Conheça nossa seleção de produtos, feitas com ingredientes frescos e selecionados.
    </p>
  </div>

  <!-- Grid de Produtos -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-4">
    {products.map((product) => (
      <CardProduto product={product} />
    ))}
  </div>
</section>