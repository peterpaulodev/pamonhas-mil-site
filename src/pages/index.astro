---

import Layout from "../layouts/Layout.astro"

import ServicesCarousel from "../components/ServicesCarousel.astro"
import HeroSection from "../components/HeroSection.astro"
import AddressSection from "../components/AddressSection.astro"
import ProductsSection from "../components/ProductsSection.astro"

import products from "../data/products.json"
import services from "../data/services.json"
import home from "../data/home.json"
import global_settings from "../data/global_settings.json"

---

<Layout title={ global_settings.title }>

  <HeroSection
    content={ home.hero_content }
    settings={ global_settings }
    title={ home.hero_title }
  />

  <ServicesCarousel
    services={ services }
    title={ home.services_title }
  />

  <ProductsSection
    products={ products }
    title={ home.case_studies_title }
  />
  
  <AddressSection
    title="Onde nos encontrar?"
    subtitle="Venha visitar um de nossos pontos e experimente nossas delÃ­cias"
  />

</Layout>
